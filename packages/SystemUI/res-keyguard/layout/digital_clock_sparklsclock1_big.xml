<com.android.keyguard.clock.ClockLayout 
xmlns:androidprv="http://schemas.android.com/apk/prv/res/android" 
xmlns:android="http://schemas.android.com/apk/res/android" 
xmlns:app="http://schemas.android.com/apk/res-auto" 
xmlns:aapt="http://schemas.android.com/aapt" 
android:layout_gravity="top" 
android:layout_width="match_parent" 
android:layout_height="match_parent" 
android:layoutDirection="ltr"
android:paddingBottom="20dp">
    <LinearLayout 
	android:layout_gravity="center_horizontal" 
	android:orientation="vertical" 
	android:id="@+id/clock_view" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content" 
	android:layoutDirection="ltr">
			<LinearLayout 
			android:layout_gravity="center" 
			android:gravity="center" 
			android:orientation="vertical" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">
				<TextClock 
				android:id="@+id/timeclock1" 
				android:layout_gravity="center" 
				android:gravity="center" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:singleLine="true" 
				android:textSize="110.0sp" 
				android:textColor="?attr/wallpaperTextColor" 
				android:textStyle="normal" 
				android:format12Hour="hh" 
				android:format24Hour="kk" 
				android:textAllCaps="true" 
				android:letterSpacing="0.03"/>
				<ImageView 
				android:layout_gravity="center" 
				android:gravity="center" 
				android:layout_width="36dp" 
				android:layout_height="10dp" 
				android:alpha="0.5" 
				android:src="@drawable/sparkls1_bg1"/>
				<TextClock 
				android:id="@+id/timeclock2" 
				android:layout_gravity="center" 
				android:gravity="center" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:singleLine="true" 
				android:textSize="110.0sp" 
				android:textColor="?attr/wallpaperTextColor" 
				android:textStyle="normal" 
				android:format12Hour="mm" 
				android:format24Hour="mm" 
				android:textAllCaps="true" 
				android:letterSpacing="0.03"/>
			</LinearLayout>
			<FrameLayout 
			android:layout_gravity="center" 
			android:gravity="center" 
			android:orientation="horizontal" 
			android:layout_width="118.0dip"
			android:layout_height="20.0dip" 
			android:elegantTextHeight="false" 
			android:fontFeatureSettings="tnum, cv03, cv04">
				<ImageView 
				android:layout_gravity="center" 
				android:gravity="center" 
				android:layout_width="match_parent" 
				android:layout_height="match_parent" 
				android:alpha="1.0" 
				android:src="@drawable/sparkls1_bg2"/>
				<ImageView 
				android:layout_gravity="center" 
				android:gravity="center" 
				android:layout_width="match_parent" 
				android:layout_height="match_parent" 
				android:alpha="0.5" 
				android:src="@drawable/sparkls1_bg1" 
				android:paddingStart="0dp" 
				android:paddingEnd="0dp" 
				android:paddingTop="0dp" 
				android:paddingBottom="0dp"/>
				<TextClock android:id="@+id/date" 
				android:layout_gravity="center" 
				android:gravity="center" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:singleLine="true" 
				android:textSize="18.0sp" 
				android:textColor="?attr/wallpaperTextColor" 
				android:textStyle="bold" 
				android:format12Hour="EEE, MMM dd" 
				android:format24Hour="EEE, MMM dd" 
				android:textAllCaps="false" />
			</FrameLayout>
		</LinearLayout>
</com.android.keyguard.clock.ClockLayout>
